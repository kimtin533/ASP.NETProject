
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width:100%;
            
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        img {
            max-width: 100px;
            max-height: 100px;
        }
    </style>
    @*<link href="~/assets/css/grid.css" type="text/css"/>*@
</head>
<body>

    <div class="grid wide">
        <div class="row" style="margin-top:20px">
            <a href="/Admin/Admin/Add" style="text-decoration:none; font-size:20px; border: 1px solid #000000; background-color:red; color:white; font-weight:400; border-radius: 8px; height:50px;text-align:center;line-height:30px ;width:200px" >
                Thêm sản phẩm
            </a>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá gốc</th>
                    <th>Giá</th>
                    <th>Tình trạng</th>
                    <th>Tùy chỉnh</th>
                </tr>
                @{ foreach (var item in Model)
                    {
                        <tr>
                            <td>(@item.ID)</td>
                            <td><img src="~/images/@(item.HINHANH)" alt="Hình ảnh sản phẩm"></td>
                            <td>@(item.TENSP)</td>
                            <td>@(item.GIA) VNĐ</td>
                            <td>@(item.GIAGOC) VNĐ</td>
                            <td>@(item.TINHTRANG)</td>
                            <td>
                                <a href="/Admin/Admin/Edit?ID=@item.ID">
                                    Sửa
                                </a>
                                <a style="margin-left:20px" href="@Url.Action("Delete", "Admin", new { ID = item.ID })">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }

                }

                <!-- Thêm các dòng khác tương tự ở đây -->
            </table>
        </div>
    </div>

</body>
</html>
